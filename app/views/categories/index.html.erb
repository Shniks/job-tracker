<%= stylesheet_link_tag "index_show" %>
<header>
  <h3>Job Categories</h3>
  <%= link_to "Add a new category", new_category_path %>
</header>

<section>
  <ul>
    <% @categories.each do |category| %>
    <li class=category_<%= category.id %>>
      <%= link_to "Edit", edit_category_path(category) %>
      <%= button_to "Delete", category_path(category), method: "delete" %>
      <%= category.name %>
      <%= link_to "#{category.jobs.count} Jobs", category_path(category) %>
    </li>
    <% end %>
  </ul>
</section>
