<%= stylesheet_link_tag "index_show" %>
<header>
  <h3>List of Companies</h3>
  <span id="add-company-label" title="Add a New Company"><%= link_to image_tag("company.png", height: 35, width: 35), new_company_path %>
</header>

<table>
  <td class="job-list-1">ROLE</td>
  <td class="job-list-2"></td>
  <td class="job-list-2"></td>
  <% @companies.each do |company| %>
    <tr class=company_<%= company.id %>>
      <td class="job-list"><%= link_to company.name, company_path(company) %></td>
      <td class="job-list-3" title="Edit"><%= link_to image_tag("edit.png", height: 15, width: 15), edit_company_path(company) %></td>
      <td class="job-list-3" title="Delete"><%= link_to image_tag("delete.png", height: 15, width: 15), company_path(company), method: "delete" %></td>
    </tr>
    <% end %>
</table>
