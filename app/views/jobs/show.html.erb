<%= stylesheet_link_tag "index_show" %>
Title: <%= @job.title %>
<br>

Description: <%= @job.description %>
<br>

Level of Interest: <%= @job.level_of_interest %>
<br>

City: <%= @job.city %>
<br>

Company: <%= link_to @job.company.name, company_path(@job.company) %>

<%= link_to "Edit", edit_company_job_path(@job.company) %>
<%= link_to "Delete", company_job_path(@job.company), method: "delete" %>

<%= form_for [@job, @comment] do |f| %>

  <%= f.label :notes %>
  <%= f.text_area :content %>

  <%= f.submit %>
<% end %>

<table>
  <% @job.sorted_comments.each do |comment| %>
  <tr id="comment_id_<%= comment.id %>">
    <td><%= comment.created_at %></td>
    <td><%= comment.content %></td>
  </tr>
  <% end %>
</table>
