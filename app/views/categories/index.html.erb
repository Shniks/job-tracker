<%= stylesheet_link_tag "index_show" %>
<header>
  <h3>Job Categories</h3>
  <%= link_to "Add a new category", new_category_path %>
</header>

<section>
  <ul>
    <% @categories.each do |category| %>
    <li >
      <li><%= link_to "Edit", edit_category_path(category) %></li>
      <li><%= button_to "Delete", category_path(category), method: "delete" %></li>
      <li><%= category.name %></li>
      <li><%= link_to "#{category.jobs.count} Jobs", category_path(category) %></li>
    </li>
    <% end %>
  </ul>
</section>
