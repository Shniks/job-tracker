<%= stylesheet_link_tag "create_edit" %>
<%= form_for [@job] do |f| %>

  <%= f.label :category %>
  <%= f.collection_select(:category_id, @categories, :id, :name) %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :company %>
  <%= f.collection_select(:company_id, @companies, :id, :name) %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :city %>
  <%= f.text_field :city %>


  <div class="create-edit-buttons-container">
    <%= f.submit("Save") %>
    <a class="create-edit-buttons-container" href="#">Cancel</a>
  </div>

<% end %>
